// 请勿修改，否则可能出错
var browser;
var userAgent = navigator.userAgent, 
			rMsie = /(msie\s|trident.*rv:)([\w.]+)/, 
			rFirefox = /(firefox)\/([\w.]+)/, 
			rOpera = /(opera).+version\/([\w.]+)/, 
			rChrome = /(chrome)\/([\w.]+)/, 
			rSafari = /version\/([\w.]+).*(safari)/;
			var version;
			var ua = userAgent.toLowerCase();
			function uaMatch(ua) {
				var match = rMsie.exec(ua);
				if (match != null) {
					return { browser : "IE", version : match[2] || "0" };
				}
				var match = rFirefox.exec(ua);
				if (match != null) {
					return { browser : match[1] || "", version : match[2] || "0" };
				}
				var match = rOpera.exec(ua);
				if (match != null) {
					return { browser : match[1] || "", version : match[2] || "0" };
				}
				var match = rChrome.exec(ua);
				if (match != null) {
					return { browser : match[1] || "", version : match[2] || "0" };
				}
				var match = rSafari.exec(ua);
				if (match != null) {
					return { browser : match[2] || "", version : match[1] || "0" };
				}
				if (match != null) {
					return { browser : "", version : "0" };
				}
			}
			var browserMatch = uaMatch(userAgent.toLowerCase());
			if (browserMatch.browser) {
				browser = browserMatch.browser;
				version = browserMatch.version;
			}
			

function openSol(i)
{
	//location.href="questions/question" + i + ".html";
	window.open("questions/question" + i + ".html");
}
			
function closeSol()
{
	//location.href="../index.html";
	//window.history.go(-1);
	window.close();
}

function gobackList()
{
	window.location.href="../index.html";
}

function getBrowserBit(bType)
{
	if ((bType == 1)&&(browser != "IE"))
	{
		alert("当前浏览器不是IE，不能获取IE的位数，请换用IE获取");
		return;
	}
	else if ((bType == 2)&&(browser != "firefox")){
		alert("当前浏览器不是火狐，不能获取火狐的位数，请换用火狐获取");
		return;		
	}
		if(window.navigator.platform == "Win32")
			alert(browser+"是32位的！");
		else
			alert(browser+"是64位的！");	
}		
	
function showDetail(item)
{
	$("#"+item).show();
	$("#divmain").hide();
	location.href="#";
}

function BackToSol(item)
{
	$("#"+item).hide();
	$("#divmain").show();
	location.href="#";
}

function BackToSol_DualCore()
{
	$(".DualCoreList").show();
	$(".DualCoreDetailItem").hide();
	$("#DualCore").hide();
	$("#divmain").show();
	location.href="#sol4";	
}

function ShowDualCoreItem(item)
{
	$(".DualCoreList").hide();
	$(".DualCoreDetailItem").hide();
	$("#"+item).show();
	location.href="#";
}

function ShowFileAccessErrorItem(item)
{
	$("#divmain").hide();
	$("#sol5").hide();
	$("#FileAccessError").show();
	$("#FileAccessErrorItem"+item).show();
	location.href="#";
}

function BackToSol_FileAccessError()
{
	$("#divmain").show();
	$("#sol5").show();
	$("#FileAccessError").hide();
	$(".DetailItem").hide();
	location.href="#";
}

function goSearch()
{
	var itemTitle = "";
	var reg = new RegExp($("#txtSearch").val());
	if ($("#txtSearch").val() != "")
	{	
		$(".QuestionList").show();
		$(".QuestionItem").show();
		$(".Solution").hide();
		$(".DetailInfo").hide();
		$("#divmain").show();
		$(".QuestionItem").each(function(i){
				itemTitle = $(this).find('a').text();
				if (!itemTitle.match(reg))
				{
					$(this).hide();
				}
			}	
		)
	}
	else
	{
		location.reload();
	}
}